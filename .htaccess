# Configuration O2Switch - Redirection API vers backend
RewriteEngine On

# Rediriger /api/* vers le backend Node.js
RewriteRule ^api/(.*)$ /backend/$1 [L]

# Servir le frontend pour tout le reste
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /frontend/dist/$1 [L]